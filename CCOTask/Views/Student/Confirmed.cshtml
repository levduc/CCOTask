@model IEnumerable<CCOTask.Models.Appointments>

@{
    ViewBag.Title = "Confirmed";
}

<h2>Confirmed Appointments</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConserlorEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConserlorEmail)
        </td>
    </tr>
}

</table>
